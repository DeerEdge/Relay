<CallingWindow>:
    name: "call"
    MDBoxLayout:
        orientation: "vertical"
        MDLabel:
        MDRoundFlatButton:
            text: "Record"
            pos_hint: {"center_x": .5, "center_y": 1}
            on_press:
                app.begin_record()
        MDLabel:
        MDRoundFlatButton:
            text: "Stop Recording"
            pos_hint: {"center_x": .5, "center_y": 1}
            on_press:
                app.end_call()
        MDLabel:
        MDRoundFlatButton:
            text: "End Call"
            pos_hint: {"center_x": .5, "center_y": 1}
            on_press:
                app.end_call()
                root.manager.transition.direction = "down"
        MDLabel: