<MainWindow>:
    name: "main"
    MDBoxLayout:
        orientation: "vertical"
        MDBottomNavigation:
            MDBottomNavigationItem:
                name: 'screen_1'
                text: "Home"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Recents"
                    MDLabel:
                        text: "Nav Page: Home"
                        halign: "center"

            MDBottomNavigationItem:
                name: 'screen_2'
                text: "Dial"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Dial"
                    MDBoxLayout:
                        orientation: "vertical"
                        pos_hint: {"center_y": 0.55}
                        size_hint: 1, 0.75
                        MDLabel:
                        MDLabel:
                            id:number
                            text: "Enter Number"
                            halign: "center"
                            size_hint: 1, 0.2

                        MDLabel:
                        AnchorLayout:
                            MDGridLayout:
                                cols: 3
                                spacing: 50
                                size_hint: None, None
                                size: self.minimum_size
                                MDRoundFlatButton:
                                    text: "1"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "2"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "3"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "4"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "5"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "6"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "7"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "8"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "9"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "*"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "0"
                                    on_press:
                                        root.update_num_field(self)
                                MDRoundFlatButton:
                                    text: "#"
                                    on_press:
                                        root.update_num_field(self)
                        MDLabel:
                        MDRoundFlatButton:
                            text: "  Call  "
                            pos_hint: {"center_x": .5}
                            on_press:
                                app.start_call()
                                root.manager.transition.direction = "up"
                        MDLabel:

            MDBottomNavigationItem:
                name: 'screen_3'
                text: "Info"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Info"
                    MDLabel:
                    MDLabel:
                    MDLabel:
                    MDLabel:
                    MDLabel:
                        text: "Team Hash Browns"
                        halign: "center"
                    MDLabel:
                    FitImage:
                        size: (dp(120)), (dp(120))
                        radius: [dp(120), ]
                        size_hint: (None, None)
                        source: 'cat_avatar.jpg'
                        pos_hint: {'center_x': .5, 'center_y': .5}
                    MDLabel:
                    MDLabel:
                        text: "Joined July 20th, 2023"
                        pos_hint: {'center_x': .5, 'center_y': 1}
                        halign: "center"
                    MDLabel:
                    MDLabel:
                    MDLabel:
                        text: "Preferred languages of communication: English, Spanish, Telugu"
                        halign: "center"
                        padding: (dp(20), )
                    MDLabel:
                    MDLabel:
                    MDLabel:
                        text: "Resources"
                        bold: True
                        halign: "center"
                    MDLabel:
                    MDRectangleFlatButton:
                        text: "Telecommunication Relay Services"
                        padding: (dp(50),dp(10))
                        theme_text_color: "Custom"
                        halign: "center"
                        text_color: "blue"
                        pos_hint: {'center_x': .5, 'center_y': 1}
                        on_press:
                            app.contact_official_link()
                    MDLabel:
                    MDRectangleFlatButton:
                        text: "ADA Requirements"
                        padding: (dp(50),dp(10))
                        theme_text_color: "Custom"
                        halign: "center"
                        text_color: "blue"
                        pos_hint: {'center_x': .5, 'center_y': 1}
                        on_press:
                            app.read_ADA_link()
                    MDLabel:
                    MDRectangleFlatButton:
                        text: "Request Help"
                        padding: (dp(50),dp(10))
                        theme_text_color: "Custom"
                        halign: "center"
                        text_color: "blue"
                        pos_hint: {'center_x': .5, 'center_y': 1}
                        on_press:
                            app.read_ADA_link()
                    MDLabel:
                    MDRectangleFlatButton:
                        text: "Report a Bug"
                        padding: (dp(50),dp(10))
                        theme_text_color: "Custom"
                        halign: "center"
                        text_color: "blue"
                        pos_hint: {'center_x': .5, 'center_y': 1}
